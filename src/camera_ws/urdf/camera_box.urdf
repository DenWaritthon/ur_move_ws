<?xml version="1.0"?>
<robot name="camera_box" xmlns:xacro="http://ros.org/wiki/xacro">

  <gazebo reference="camera_link">
   
   <material>Gazebo/Orange</material>  <!-- Locks the box in place -->
  </gazebo>
  <gazebo> <static>true</static></gazebo>

  <!-- Define the camera box -->
  <link name="camera_link">
    <pose>0 0 0 0 0 0</pose>  <!-- Lifted slightly above the ground -->
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
    <visual>
      <geometry>
        <box size="1.2 1.2 0.05"/>  <!-- Fixed zero height issue -->
      </geometry>
      <material name="red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.2 1.2 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Gazebo plugin for the camera sensor -->
  <gazebo reference="camera_link">
    <sensor name="camera" type="camera">
      <pose>0 0 1.06 0 1.57079632679 0</pose>  <!-- Moved camera higher -->
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <format>R8G8B8</format>
          <width>640</width>
          <height>640</height>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
      <plugin name="camera_controller" filename="libgazebo_ros_camera.so">
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>



</robot>
